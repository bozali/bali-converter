<UserControl x:Class="Bali.Converter.App.Modules.Settings.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bali.Converter.App.Modules.Settings.Views"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:vm="clr-namespace:Bali.Converter.App.Modules.Settings.ViewModels"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance vm:SettingsViewModel}" 
             prism:ViewModelLocator.AutoWireViewModel="True"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="15">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Download Directory" Margin="0 0 0 5" />

            <StackPanel Margin="0 0 0 10" Orientation="Horizontal">
                <TextBox Text="{Binding DownloadDir}" IsReadOnly="True" />
                <Button HorizontalContentAlignment="Center" Width="30" Content="..." Command="{Binding SelectDownloadDirCommand}" />
            </StackPanel>

            <Button HorizontalAlignment="Left" Content="Save" Width="150" />
        </StackPanel>
    </Grid>
</UserControl>